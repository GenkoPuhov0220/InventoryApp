@using InventoryApp.Web.ViewModel.Inventory
@model DeleteItemViewModel

<h2>Delete Item</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this item?</h4>
</div>

<div class="mb-3">
    <strong>Title:</strong> @Model.Title
</div>

<div class="mb-3">
    <strong>Supplier:</strong> @Model.Supplier
</div>

<div class="mb-3">
    <strong>Quantity:</strong> @Model.Quantity
</div>
<div class="mb-3">
    <strong>Unit Price:</strong> @Model.UnitPrice
</div>
<div class="mb-3">
    <strong>Price:</strong> @Model.Price
</div>

<form asp-action="ConfirmedDelete"
      asp-route-id="@Context.Request.RouteValues["id"]"
      method="post">

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>